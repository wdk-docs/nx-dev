{
  "root": "packages/nx",
  "sourceRoot": "packages/nx",
  "projectType": "library",
  "targets": {
    "build-base": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "build/packages/nx",
        "tsConfig": "packages/nx/tsconfig.lib.json",
        "main": "packages/nx/bin/nx.ts",
        "assets": [
          {
            "input": "packages/nx",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "packages/nx",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/nx",
            "glob": "**/*.json",
            "ignore": ["**/tsconfig*.json", "**/project.json"],
            "output": "/"
          },
          {
            "input": "packages/nx",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/nx",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          "LICENSE"
        ]
      },
      "outputs": ["{options.outputPath}"]
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["build/packages/nx"],
      "options": {
        "commands": [
          {
            "command": "node ./scripts/copy-readme.js nx"
          }
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/nx/**/*.ts",
          "packages/nx/**/*.spec.ts",
          "packages/nx/**/*_spec.ts",
          "packages/nx/**/*.spec.tsx",
          "packages/nx/**/*.spec.js",
          "packages/nx/**/*.spec.jsx",
          "packages/nx/**/*.d.ts"
        ]
      },
      "outputs": ["{options.outputFile}"]
    }
  }
}
